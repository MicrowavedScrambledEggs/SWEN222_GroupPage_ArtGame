package artGame.ui.renderer;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;


public class AssetLoader {
	// all methods in this class must return an implementation of Asset
	
	// singleton
	private static AssetLoader instance = new AssetLoader();
	
	public static AssetLoader instance() {
		return instance;
	}
	
	private AssetLoader() {
		
	}
	
	public Model loadOBJ(String filepath) {
		//TODO
		List<Coord> vertList = new ArrayList<Coord>();
		List<Coord> uvList = new ArrayList<Coord>();
		
		try {
			Scanner scan = new Scanner(new File(filepath));
			
			while (scan.hasNext()) {
				String next = scan.next();
				
				if (next.equals("#")) {
					// skip over comments
					scan.nextLine();
				} else if (next.equals("v")) {
					// add a vertex
					vertList.add(new Coord(scan.nextDouble(), scan.nextDouble(), scan.nextDouble()));
				} else if (next.equals("vt")) {
					uvList.add(new Coord(scan.nextDouble(), scan.nextDouble()));					}
				}
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			return null;
		}
		return null;
	}
	
	public Sprite[][] loadSpritesheet(String filepath) {
		//TODO
		return null;
	}
}
