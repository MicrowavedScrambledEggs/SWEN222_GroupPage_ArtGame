package artGame.ui.renderer;

public class Model implements Asset {
	
	public Model(Coord[] verts, Coord[] uvs, Coord[] norms) {
		
	}
	
	@Override
	public void draw(double x, double y, double z) {
		// TODO Auto-generated method stub
		
	}

	public class Coord {
		private double x;
		private double y;
		private double z;

		public Coord (double x, double y, double z) {
			this.x = x;
			this.y = y;
			this.z = z;
		}
		
		public Coord (double x, double y) {
			this.x = x;
			this.y = y;
			this.z = 0;
		}

		public double getX() {
			return x;
		}
		
		public double getY() {
			return y;
		}
		
		public double getZ() {
			return z;
		}
	}
}
